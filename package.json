{
  "author": "Danyl Fernandes <realllydan@gmail.com>",
  "description": "Dan's personal writing space.",
  "scripts": {
    "dev": "cross-env BASE_URL=http://localhost:8080 NODE_ENV=development npm-run-all --parallel css serve",
    "serve": "eleventy --serve",
    "css": "postcss src/css/tailwind.css -o _site/css/style.css --watch",
    "build": "eleventy && yarn css"
  },
  "keywords": [
    "tech",
    "blog",
    "finances"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/gitryder/danwrites.git",
    "https": "https://github.com/gitryder/danwrites.git",
    "editUrl": "https://github.com/gitryder/danwrites/edit/master"
  },
  "bugs": {
    "url": "https://github.com/gitryder/danwrites/issues"
  },
  "dependencies": {
    "autoprefixer": "10.4.7",
    "postcss": "8.4.14",
    "tailwindcss": "3.0.24"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.1",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@tailwindcss/typography": "^0.5.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0"
  }
}
